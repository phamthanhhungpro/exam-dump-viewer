<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= config.appTitle %> - Choose Your Exam</title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="64x64" href="https://img.icons8.com/nolan/64/filled-star.png">
  <link rel="icon" type="image/png" sizes="32x32" href="https://img.icons8.com/nolan/32/filled-star.png">
  <link rel="icon" type="image/png" sizes="16x16" href="https://img.icons8.com/nolan/16/filled-star.png">
  <link rel="apple-touch-icon" sizes="180x180" href="https://img.icons8.com/nolan/180/filled-star.png">
  <meta name="theme-color" content="#667eea">
  
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    .float-animation {
      animation: float 4s ease-in-out infinite;
    }
    @keyframes slideUp {
      from { opacity: 0; transform: translateY(50px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .slide-up {
      animation: slideUp 0.8s ease-out;
    }
    .gradient-bg {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .card-hover {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .card-hover:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }
  </style>
</head>
<body class="min-h-screen gradient-bg">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25px 25px, white 3px, transparent 0), radial-gradient(circle at 75px 75px, white 3px, transparent 0); background-size: 100px 100px;"></div>
  </div>
  
  <div class="relative min-h-screen flex items-center justify-center p-4">
    <div class="max-w-6xl mx-auto">
      <!-- Header Section -->
      <div class="text-center mb-16 slide-up">
        <div class="float-animation inline-block mb-8">
          <div class="w-28 h-28 bg-white rounded-full flex items-center justify-center shadow-2xl mx-auto">
            <span class="text-5xl">üöÄ</span>
          </div>
        </div>
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
          <%= config.appTitle %>
        </h1>
        <p class="text-2xl text-purple-100 mb-4"><%= config.appDescription %></p>
        <div class="flex justify-center items-center space-x-6 text-purple-200">
          <div class="flex items-center">
            <span class="w-3 h-3 bg-green-400 rounded-full mr-2"></span>
            <span class="text-lg">Multiple Exam Types</span>
          </div>
          <div class="flex items-center">
            <span class="w-3 h-3 bg-green-400 rounded-full mr-2"></span>
            <span class="text-lg">Progress Tracking</span>
          </div>
          <div class="flex items-center">
            <span class="w-3 h-3 bg-green-400 rounded-full mr-2"></span>
            <span class="text-lg">User Bookmarks</span>
          </div>
        </div>
      </div>

      <!-- Exam Selection Cards -->
      <div class="bg-white rounded-3xl shadow-2xl p-10 slide-up" style="animation-delay: 0.3s">
        <h2 class="text-4xl font-bold text-gray-800 text-center mb-12">Choose Your Exam</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% exams.forEach(exam => { %>
            <a href="/<%= exam.id %>" 
               class="card-hover group relative bg-gradient-to-br <%= exam.color.gradient %> hover:from-<%= exam.color.primary %>-600 hover:to-<%= exam.color.primary %>-700 text-white rounded-2xl p-8 overflow-hidden">
              
              <!-- Exam Icon -->
              <div class="text-center mb-6">
                <div class="inline-block text-6xl mb-4 transform group-hover:scale-110 transition-transform">
                  <%= exam.icon %>
                </div>
                <div class="bg-white bg-opacity-20 rounded-full px-4 py-2 inline-block">
                  <span class="text-sm font-bold"><%= exam.code %></span>
                </div>
              </div>
              
              <!-- Exam Info -->
              <div class="text-center">
                <h3 class="font-bold text-xl mb-3"><%= exam.name %></h3>
                <p class="text-sm opacity-90 mb-6"><%= exam.description %></p>
                
                <!-- Stats -->
                <div class="grid grid-cols-2 gap-4 text-center">
                  <div class="bg-white bg-opacity-20 rounded-lg p-3">
                    <div class="font-bold text-lg"><%= exam.examsCount %></div>
                    <div class="text-xs opacity-90">Exam Sets</div>
                  </div>
                  <div class="bg-white bg-opacity-20 rounded-lg p-3">
                    <div class="font-bold text-lg"><%= exam.totalQuestions %></div>
                    <div class="text-xs opacity-90">Questions</div>
                  </div>
                </div>
              </div>
              
              <!-- Hover Effect -->
              <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-10 transition-opacity rounded-2xl"></div>
              
              <!-- Arrow Indicator -->
              <div class="absolute top-4 right-4 transform translate-x-2 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all">
                <span class="text-2xl">‚Üí</span>
              </div>
            </a>
          <% }); %>
        </div>
        
        <!-- Features Section -->
        <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center p-6 bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-xl">
            <div class="text-4xl mb-4">üìä</div>
            <h3 class="font-bold text-indigo-800 mb-2">Progress Tracking</h3>
            <p class="text-sm text-indigo-600">Track your scores and improvement over time</p>
          </div>
          
          <div class="text-center p-6 bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl">
            <div class="text-4xl mb-4">‚≠ê</div>
            <h3 class="font-bold text-purple-800 mb-2">Question Bookmarks</h3>
            <p class="text-sm text-purple-600">Save important questions for later review</p>
          </div>
          
          <div class="text-center p-6 bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-xl">
            <div class="text-4xl mb-4">üéØ</div>
            <h3 class="font-bold text-emerald-800 mb-2">Smart Analytics</h3>
            <p class="text-sm text-emerald-600">Visual indicators for completed exams</p>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div class="text-center mt-12 text-purple-200">
        <p class="text-lg">¬© 2025 <%= config.appTitle %> - Practice makes perfect! üéØ</p>
      </div>
    </div>
  </div>
</body>
</html>
